
      <h1>Browser</h1>
      {{!using GET will helo get query params from url}}
      <form action="/" method="GET">
        <input type="text" class="search" name="search" placeholder="Search..." value="{{search}}">
        <input type="number" name="from" class="difficulty" placeholder="Difficulty from..." value="{{from}}">
        <span>-</span>
        <input type="number" name="to" class="difficulty" placeholder="Difficulty to..." value="{{to}}">
        <input type="submit" value="search">
      </form>
       {{!using for-each for the cubes (comes from actual name) and partial}}
      <div class="cube-list">
      {{#each cubes}}
      {{> cube}}
      {{else}}
      <span> No cubes in database. <a style="color: blue" href="/create">Create the first one!</a></span>
       {{/each}}
      </div>
      {{!loading external script via files}}
      <script src="/js/app.js"></script>